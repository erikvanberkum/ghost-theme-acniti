{
    "name": "acniti",
    "description": "This is Acniti, a product promotion orientated theme for Ghost based on editorial.",
    "demo": "https://h2.acniti.com",
    "version": "3.0.0",
    "engines": {
        "ghost": ">=3.0.0",
        "ghost-api": "v3"
    },
    "license": "MIT",
    "screenshots": {
        "desktop": "assets/screenshot-desktop.jpg"
    },
    "scripts": {
        "dev": "gulp",
        "zip": "gulp zip",
        "pretest": "gulp build",
        "test": "gscan .",
        "test:ci": "gscan --fatal --verbose .",
        "preship": "yarn test",
        "ship": "STATUS=$(git status --porcelain); echo $STATUS; if [ -z \"$STATUS\" ]; then yarn version && git push --follow-tags; fi"
    },
    "author": {
        "name": "Ghost Foundation",
        "email": "hello@ghost.org",
        "url": "https://ghost.org"
    },
    "gpm": {
        "type": "theme",
        "categories": [
            "Minimal",
            "Magazine",
            "Product"
        ]
    },
    "keywords": [
        "ghost",
        "theme",
        "ghost-theme"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/erikvanberkum/ghost-theme-acniti.git"
    },
    "bugs": "https://github.com/TryGhost/Editorial/issues",
    "contributors": [
        {
            "name": "ajlkn",
            "email": "aj@lkn.io",
            "url": "https://twitter.com/ajlkn"
        },
        {
            "name": "erikvanberkum",
            "email": "bubble@acniti.com",
            "url": "https://www.acniti.com"
        }
    ],
    "devDependencies": {
        "beeper": "2.0.0",
        "gscan": "3.5.7",
        "gulp": "^4.0.2",
        "gulp-livereload": "^4.0.2",
        "gulp-sass": "4.1.0",
        "gulp-sourcemaps": "2.6.5",
        "gulp-uglify": "^3.0.2",
        "gulp-watch": "5.0.1",
        "gulp-zip": "5.0.2",
        "node-sass": "4.14.1",
        "pump": "^3.0.0"
    },
    "config": {
        "posts_per_page": 6
    }
}
